/* dark #006B47
light #007F55
accent #E87D12 */

@import url("https://fonts.googleapis.com/css?family=Handlee");
@import url("https://fonts.googleapis.com/css?family=Muli");

body {
   background-image: url("../images/background.jpg");
   background-position: 50% 60%;
   background-attachment: fixed;
   background-size: cover;

   font-size: 1vw;
}

#main-container {
   width: 100vw;
   padding: 0;
   margin: 0;
}

nav {
   background-color: #007F55;
   width: 100%;
   height: 3em;
   display: flex;
}

nav a:active, a:hover, a:link, a:visited {
   color: #FFF;
   text-decoration: none;
}

nav ul {
   display: flex;
   /* height: 75%; */
   width: 100%;
   margin: 0;
   padding: 0;
}

nav li {
   display: inline-flex;
   height: 100%;
   padding: 1em;
   text-align: center;
}

nav li:hover {
   background-color: #006B47;
}